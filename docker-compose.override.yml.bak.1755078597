      PORT: "3102"
      FF_PAYMENTS: "1"
      PAY_PROVIDER: "yookassa"

      # Выход к YooKassa через ретранслятор → IP → DNS
      YK_SNI_HOST: "api.yookassa.ru"
      YK_API_HOSTS: "172.17.0.1:8443,185.71.78.133,109.235.165.99,api.yookassa.ru"

      # Basic для вебхука отключаем (YooKassa его не шлёт)
